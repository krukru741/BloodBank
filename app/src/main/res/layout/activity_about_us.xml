                                android:text="UI/UX Designer"
                                android:textSize="14sp"
                                android:textColor="#000000"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Team Member 4 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/loraine"
                            android:contentDescription="Team Member Photo"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lorenelia Laput"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#990f10"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="UI/UX Designer"
                                android:textSize="14sp"
                                android:textColor="#000000"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!-- Team Member 4 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

            <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/raymond"
                            android:contentDescription="Team Member Photo"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Raymond Balucos"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#990f10"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="UI/UX Designer"
                                android:textSize="14sp"
                                android:textColor="#000000"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Contact Information -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:background="#fff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Us"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#990f10"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp">

                        <!-- Email Section -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#990f10"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="albengacayan486@gmail.com"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:layout_marginBottom="8dp"/>

                        <!-- Phone Section -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#990f10"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="09556834769"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:layout_marginBottom="8dp"/>

                        <!-- Address Section -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#990f10"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Talisay City, Cebu, Philippines"
                            android:textSize="14sp"
                            android:textColor="#000000"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Footer -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp"
                android:text="© 2023 Blood Bank. All rights reserved."
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>